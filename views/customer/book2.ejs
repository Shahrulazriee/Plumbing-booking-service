<%- include ("../partials/_headerMainCustomer.ejs") %>
<link
	href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
	rel="stylesheet"
	id="bootstrap-css"
/>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<body>
	<section class="testimonial py-5" id="testimonial">
		<div class="container">
			<div class="row">
				<div class="col-md-4 py-5 bg-primary text-white text-center">
					<div class=" ">
						<div class="card-body">
							<img
								src="http://www.ansonika.com/mavia/img/registration_bg.svg"
								style="width: 30%"
							/>
							<h2 class="py-3">Booking form</h2>
							<p>Plumber Information</p>
							<p>Name: <%= data1.name %></p>
							<p>Email: <%= data1.email %></p>
							<p>Phone No: <%= data1.phone_no %></p>
							<p>Rating: <%= data2.rating %></p>
							<p>Five star: <%= data2.fiveStar %></p>
							<p>Four star: <%= data2.fourStar %></p>
							<p>Three star: <%= data2.threeStar%></p>
							<p>Two star: <%= data2.twoStar %></p>
							<p>One star: <%= data2.oneStar %></p>
						</div>
					</div>
				</div>
				<div class="col-md-8 py-5 border">
					<h4 class="pb-4">Please fill with your details</h4>
					<form method="post" action="/api/customer/book">
						<div class="form-row">
							<div class="form-group col-md-6">
								<input
									name="date"
									placeholder="date"
									class="form-control"
									type="date"
								/>
							</div>
							<div class="form-group col-md-6">
								<input
									name="time"
									placeholder="time"
									class="form-control"
									type="time"
								/>
							</div>
						</div>
						<div class="form-row">
							<div class="form-group col-md-12">
								<textarea
									id="comment"
									name="problem"
									placeholder="State the problem"
									cols="40"
									rows="5"
									class="form-control"
								></textarea>
							</div>
						</div>
						<input
							type="email"
							name="emailP"
							value="<%= data1.email %>"
							hidden
						/>
						<input
							type="email"
							name="emailC"
							value="<%= data.email %>"
							hidden
						/>
						<div class="form-row">
							<button type="submit" class="btn btn-danger">
								Submit
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</section>
	<% if(message.message) { %>
	<script>
		alert("<%= message.message %>");
	</script>
	<% } %>
</body>
<style>
	body {
		background-color: #ffffff;
	}
	img {
		width: 100%;
	}
</style>
